<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_pic_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tw_description_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_product" />

        <TextView
            android:id="@+id/tw_price_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price" />
        <TextView
            android:id="@+id/tw_size_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/size" />
        <TextView
            android:id="@+id/tw_avaliable_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avaliable" />
    </LinearLayout>
</LinearLayout>